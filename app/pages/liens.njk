{% extends "layout.njk" %}

{% block head %}
    <title>Olivia Gometz - Liens utiles</title>
    <meta name="description" content="Liens utiles pour Olivia Gometz : site web officiel, site web des Carmidor et la newsletter." />
    <meta name="robots" content="noindex" />
{% endblock %}

{% block content %}
    <header class="banner-gradient banner-gradient--primary">
        <div class="container">
            <article class="text--center">
                <img src="/img/medias/me-circle.png" class="img centered" alt="Photo de profil de Olivia Gometz" />

                <h1>Olivia Gometz</h1>

                <div class="buttons">
                    {% for name, website in websites.network %}
                        <a href="{{website.link}}" class="logo logo--sm logo--white" rel="external" target="_blank" aria-label="{{website.desc}}">
                            {% include "svg/logos/networks/" + name + ".svg" %}
                        </a>
                    {% endfor %}
                </div>
            </article>
        </div>

        {% include 'svg/wave.svg' %}
    </header>

    <section class="container">
        <div class="maxwidth--sm text--center">
            {% for element in linktree %}
                <div class="card card--{{element.style}}">
                    <div class="buttons">
                        <a
                            href="{{element.link}}"
                            class="button"
                            {% if 'https://' in element.link %}rel="external" target="_blank"{% endif %}
                        >
                            {{element.label | safe}}
                        </a>
                    </div>

                    <small>{{element.description | safe}}</small>
                </div>
            {% endfor %}
        </div>
    </section>

    {% include 'content/newsletter.njk' %}

    {% include 'footer.njk' %}
{% endblock %}