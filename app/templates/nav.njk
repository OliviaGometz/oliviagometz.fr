{% macro nav(activePage='') %}
<nav>
    <button type="button" class="hamburger">
        <span></span>
        <span></span>
        <span></span>
    </button>

    <a href="/" class="home">
        {% include 'svg/logos/og.svg' %}
    </a>

    <div class="overlay"></div>

    {%
        set links = {
            home: {
                name: 'Accueil',
                url: '/'
            },
            nof: {
                name: 'Les Noces',
                url: '/lesnoces'
            },
            carmidor: {
                name: 'Les Carmidor',
                url: 'https://les-carmidor.fr/',
                external: true
            },
            pro: {
                name: 'Librairies & salons',
                url: '/librairies-et-salons'
            }
        }
    %}

    <ul>
        {% for id, link in links %}
            <li>
                <a
                    href="{{ link.url }}"
                    class="{% if link.button %}button--active-primary button button{% else %}link link{% endif %}--white{%if activePage == id %} active{% endif %}"
                    {% if link.external %}target="blank"{% endif %}
                >
                    {{ link.name }}
                </a>
            </li>
        {% endfor %}
    </ul>
</nav>
{% endmacro %}